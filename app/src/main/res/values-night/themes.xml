<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoffeMoon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColorDT</item>
        <item name="colorPrimaryVariant">@color/primaryColorDT</item>
        <item name="colorOnPrimary">@color/primaryTextColorDT</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColorDT</item>
        <item name="colorSecondaryVariant">@color/secondaryColorDT</item>
        <item name="colorOnSecondary">@color/secondaryTextColorDT</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/Widget.Coffee.Button.OutlinedButton.IconOnly</item>
    </style>
</resources>